<% if user_signed_in? %>
  <div class="ui secondary pointing menu navbar-bg">
    <%= link_to 'Home', root_path, class: 'ui item' %>
    <%= link_to 'Accounts', accounts_path, class: 'ui item' %>
    <div class="right menu">
      <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: 'ui item' %>
    </div>
  </div>
<% else %>
  <div class="ui secondary pointing menu">
    <%= link_to 'Sign In', new_user_session_path, class: 'ui item' %>
    <%= link_to 'Sign Up', new_user_registration_path, class: 'ui item' %>
  </div>
<% end %>